{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "compile": "sass src/scss:dist/css",
    "compile:watch": "sass --watch src/scss:dist/css",
    "build:html": "posthtml src/*.html -o dist/ && posthtml src/pages/*.html -o dist/pages/ && posthtml src/components/*.html -o dist/components/",
    "copy:assets": "npx cpy-cli \"src/**/*.{css,js,svg,png,jpg,jpeg,gif,webp,ico,json,woff,woff2,ttf,eot,mp4,webm}\" \"!src/**/*.html\" dist/ --parents",
    "build": "npm run build:html && npm run copy:assets && npm run compile",
    "lint:scss": "stylelint \"src/**/*.scss\"",
    "lint:scss:fix": "stylelint \"src/**/*.scss\" --fix"
  },
  "devDependencies": {
    "@stylistic/stylelint-plugin": "^4.0.0",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-include": "^2.0.1",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-scss": "^6.12.1"
  },
  "files.associations": {
    "*.svg": "html"
  }
}
